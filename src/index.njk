---
layout: base.njk
templateEngineOverride: njk
---

{% include 'sitenav.njk' %}

<main>
	<section class="container">
		<div class="pure-g">
			<div class="pure-u-1-2">
				<h2 class="">{{ meta.siteDescription }}</h2>
				<div>
					<a href="#.#" class="btn">Winners 2021</a>
					<a href="#.#" class="btn btn--secondary">Video of 2021 ceremony</a>
				</div>
			</div>
		</div>
	</section>
	<section>
		<ul>
			{%- for page in collections.pages -%}
			<li>
				<div class="tdbc-card__content">
					<a href="{{ page.url }}" class="tdbc-card__title">{{ page.data.title }}</a>
					<p>{{ page.data.description }}</p>
				</div>
			</li>
			{%- endfor -%}
		</ul>
	</section>

{{ content | safe }}

</main>
